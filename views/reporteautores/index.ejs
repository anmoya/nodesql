

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
<div class="container">
    <h1 style="margin-bottom: 50px;">Reporte Autores</h1>
        <% data.forEach( (item) => { %>
            <table class="table" style="width: 30rem; margin-bottom: 40px;">
                <thead>
                    <tr>
                        <th colspan="2"><%= item.authorName + ' ' + item.authorLastName %></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Ciudad</td>
                        <td><%= item.authorCity %></td>
                    </tr>
                    <tr>
                        <td>Pais</td>
                        <td><%= item.authorCountry %></td>
                    </tr>
                    <tr>
                        <td>Nacimiento</td>
                        <td><%= item.authorBornDate %></td>
                    </tr>
                    <tr>
                        <td>Bio</td>
                        <td><%= item.authorBio %></td>
                    </tr>
                </tbody>
            </table>
        
        <%}) %>

        <!--button class="btn btn-info" style='margin: 0 auto;'>Obtener <i class="fas fa-file-pdf"></i></button-->
</div>
